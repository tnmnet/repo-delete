apiVersion: v1
kind: Service
metadata:
  name: nexus-repo
spec:
  ports:
  - port: 8081
    targetPort: 8081
    name: nexus-repo
  selector:
    app: nexus-repo
  type: LoadBalancer
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  annotations:
    kubernetes.io/ingress.class: nginx
  name: nexus-repo
spec:
  rules:
    - host: $DNS_PREFIX_REPO.$INGRESS_PUBLIC_DNS
      http:
        paths:
          - path: /
            backend:
              serviceName: nexus-repo
              servicePort: 8081
